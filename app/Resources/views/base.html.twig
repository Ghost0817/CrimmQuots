        <meta name="msapplication-TileImage" content="/mstile-144x144.png">
        <meta name="theme-color" content="#ffffff">
    </head>
    <body>
      <div class="container">
        <div class="row">
        </div>
      </div>
        <nav class="white" role="navigation">
            <div class="nav-wrapper container">
              <a id="logo-container" href="#" class="brand-logo">
                <object id="front-page-logo" type="image/svg+xml" data="/logo.svg">Logo</object>
              </a>
              <ul class="left hide-on-med-and-down">
                <li class="active"><a href="{{ path('homepage') }}">Home</a></li>
                <li><a href="{{ path('favorites',{'_format':'html'}) }}">Authors</a></li>
                <li><a href="{{ path('topicspage',{'_format':'html'}) }}">Topics</a></li>
                <li><a href="{{ path('quotesofday',{'_format':'html'}) }}">Quote of the Day</a></li>
              </ul>

              <ul class="right hide-on-med-and-down">
                <li><a>
                  <form>
                <div class="input-field">
                  <input id="search" type="search" required>
                  <label for="search"><i class="material-icons">search</i></label>
                  <i class="material-icons">close</i>
                </div>
              </form>
                </a></li>
                  {% if app.user %}
                      <li><a class="dropdown-button" href="#!" data-activates="dropdown1">My BrainyQuote <i class="fa fa-caret-down"></i></a></li>
                  {% else %}
                      <li><a href="{{ path('signup') }}">Sign Up</a></li>
                      <li><a href="{{ path('login') }}">Login</a></li>
                  {% endif %}
              </ul>

                <!-- Dropdown Structure -->
                <ul id="dropdown1" class="dropdown-content">
                    <li><a href="{{ path('usersfavorites') }}"><i class="fa fa-heart"></i> Favorites</a></li>
                    <li><a href="{{ path('userscollections') }}"><i class="fa fa-plus-square-o"></i> Collections</a></li>
                    <li class="divider"></li>
                    <li><a href="{{ path('accountsettings') }}"><i class="fa fa-cog"></i> Account Settings</a></li>
                    <li><a href="{{ path('logout') }}"><i class="fa fa-sign-out"></i> Logout</a></li>
                </ul>

              <ul id="nav-mobile" class="side-nav">
                <li class="active"><a href="{{ path('homepage') }}">Home</a></li>
                <li><a href="{{ path('favorites',{'_format':'html'}) }}">Authors</a></li>
                <li><a href="{{ path('topicspage',{'_format':'html'}) }}">Topics</a></li>
                <li><a href="{{ path('quotesofday',{'_format':'html'}) }}">Quote of the Day</a></li>
              </ul>
              <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
            </div>
        </nav>

        {% block body %}{% endblock %}
        <footer class="page-footer teal">
        <div class="container">
          <div class="row">
            <div class="col l6 s12">
              <h5 class="white-text">BrainyQuote Desktop</h5>
              <p class="grey-text text-lighten-4">We are a team of college students working on this project like it's our full time job. Any amount would help support and continue development on this project and is greatly appreciated.</p>


            </div>
            <div class="col l3 s6">
              <h5 class="white-text">Site</h5>
              <ul>
                <li><a class="white-text" href="{{ path('homepage') }}">Home</a></li>
                <li><a class="white-text" href="{{ path('favorites',{'_format':'html'}) }}">Authors</a></li>
                <li><a class="white-text" href="{{ path('topicspage',{'_format':'html'}) }}">Topics</a></li>
                <li><a class="white-text" href="{{ path('quotesofday',{'_format':'html'}) }}">Quote of the Day</a></li>
                <li><a class="white-text" href="{{ path('professionpage',{'_format':'html'}) }}">Professions</a></li>
                <li><a class="white-text" href="{{ path('birthdayspage',{'_format':'html'}) }}">Birthdays</a></li>
              </ul>
            </div>
            <div class="col l3 s6">
              <h5 class="white-text">About</h5>
              <ul>
                <li><a class="white-text" href="#!">About Us</a></li>
                <li><a class="white-text" href="#!">Inquire</a></li>
                <li><a class="white-text" href="#!">Submit</a></li>
                <li><a class="white-text" href="#!">Privacy</a></li>
                <li><a class="white-text" href="#!">Terms</a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="footer-copyright">
          <div class="container">
          Made by <a class="brown-text text-lighten-3" href="http://materializecss.com">Materialize</a>
          </div>
        </div>
    </footer>


        {% block javascripts %}{% endblock %}

      <script>
          function online(event) {
              var status = navigator.onLine ? 'online' : 'offline';
              console.log(navigator.onLine);
              if(status == 'online')
              {
                  Materialize.toast('<i class="fa fa-check"></i>&nbsp;Connected to the internet ', 4000, 'green');
              }

              if(status == 'offline')
              {
                  Materialize.toast('<i class="fa fa-check"></i>&nbsp;Cannot connect to the internet', 4000, 'red');
              }
          }

          window.addEventListener('online', online);
          window.addEventListener('offline', online);
          online({ type: 'ready' });
      </script>
    </body>
</html>
