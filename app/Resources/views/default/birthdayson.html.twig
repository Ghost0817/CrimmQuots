{% extends 'base.html.twig' %}

{% block title%}Authors by Birthday - BrainyQuote{% endblock %}

{% block stylesheets %}
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
  <link href="/css/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row sf_content">
        <h5>Birthdays on {{ date | replace('_',' ')}}</h5>

        <div class="col s12 m12 l8">
        	<div class="row">

        <table class="responsive-table">
          <thead>
            <tr>
                <th data-field="name">Author</th>
                <th data-field="rrofession">Profession</th>
                <th data-field="birthyear">Birth Year</th>
            </tr>
          </thead>

          <tbody>
            {% for author in authors %}
            <tr>
              <td><a href="{{ path('quotesbyauthor',{'slug': author.slug, '_format':'html'}) }}">{{ author.name }}</td>
              <td>{{ author.profession.name }}</td>
              <td>{{ author.born|date("Y") }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>


        	</div>
        </div>
		<div class="col s12 m12 l4">
			<h5>Popular Topics</h5>

      <blockquote class="z-depth-1" style="border-color:#00B7ED;">
        <a href="#"><b>Motivational</b> Quotes</a>
      </blockquote>

      <blockquote class="z-depth-1" style="border-color:#803591;">
        <a href="#"><b>Inspirational</b> Quotes</a>
      </blockquote>

      <blockquote class="z-depth-1" style="border-color:#F52422;">
        <a href="#"><b>Life</b> Quotes</a>
      </blockquote>

      <blockquote class="z-depth-1" style="border-color:#FFAE1D;">
