{% extends 'base.html.twig' %}

{% block title%}Authors by Birthday - BrainyQuote{% endblock %}

{% block stylesheets %}
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
  <link href="/css/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row sf_content">
        <h5>{{ author.name }} Quotes</h5>

        <div class="col s12 m12 l9">
          <div class="row">
          slider
          </div>
        	<div class="row">

      {% for item in quotes %}
        <div class="col s12 m4" style="float: left;vertical-align: top;display: inline;">
          <div class="card">
            {% if(item.image) %}
              <div class="card-image">
                <img src="/uploads/{{ item.image }}">
              </div>
            {% endif %}
            <div class="card-content">
              <p>{{ item.quote }}</p>
              <a href="">{{ author.name }}</a>
            </div>
            <div class="card-action">
              <a href="#">This is a link</a>
            </div>
          </div>
        </div>
      {% endfor %}


        	</div>
        </div>
		<div class="col s12 m12 l3">
			<h5>Biography</h5>
      <p>Nationality: <a href="#">{{ author.nationality.name }}</a></p>
      <p>Type: <a href="#">{{ author.profession.name }}</a></p>
      <p>Born: </p>
      <p>Died: </p>

            <blockquote class="z-depth-1" style="border-color:#00B7ED;">
              <a href="#"><b>Biography</b> Quotes</a>
            </blockquote>

            <blockquote class="z-depth-1" style="border-color:#803591;">
