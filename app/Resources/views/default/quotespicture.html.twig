{% extends 'base.html.twig' %}

{% block title%}Quote Pictures - BrainyQuote{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="/css/font-awesome.min.css" rel="stylesheet">
    <link href="/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
    <link href="/css/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>
{% endblock %}

{% block body %}

    {% include 'helper/letternavbar.html.twig' %}
    <div class="container">
        <div class="row sf_content">
            <div class="col s12 m12 l8">
                <div class="row" style="margin-right: 0px;">
                    <h5>Quote Pictures</h5>
                </div>

                <div class="row" style="margin-right: 0px;">
                    <div class="left">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>

                <div class="row" style="margin-right: 0px;">
                    {% for item in pagination %}
                        <div class="col s12 m4">
                            <div class="card">
                                {% if(item.image) %}
                                    <div class="card-image">
                                        <img src="/uploads/{{ item.image }}">
                                    </div>
                                {% endif %}
                                <div class="card-action">
                                    <a class="left-align" href="#" style="color:#00B7ED;"><i class="fa fa-facebook-official fa-1x"></i></a>
                                    <a class="left-align" href="#" style="color:#803591;"><i class="fa fa-twitter-square fa-1x"></i></a>
                                    {% if(item.image) %}
                                        <a class="left-align" href="#" style="color:#F52422;"><i class="fa fa-pinterest-square fa-1x"></i></a>
                                    {% else%}
                                        <a class="left-align" href="#" style="color:#85C243;"><i class="fa fa-camera fa-1x"></i></a>
                                    {% endif %}

                                    <a class="right-align right" href="#" style="color:#333;"><i class="fa fa-plus-square-o fa-1x"></i></a>
                                    <a class="right-align right" href="#" style="color:#F52422;"><i class="fa fa-heart-o fa-1x"></i></a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="row" style="margin-right: 0px;">
                    {{ knp_pagination_render(pagination) }}
                </div>


            </div>
            <div class="col s12 m12 l4">
                <div class="row">
                    <div class="row">
                        <div style="margin: 0.82rem 0 0.656rem 0;"><a href="{{ path('signup') }}"><img src="/ads/18182572789517860383.png" /></a></div>
                    </div>

                    <h5>Popular Authors</h5>
                    {{ render_esi(controller('AppBundle:Topselect:topauthors')) }}

                    <h5>Popular Topics</h5>
                    {{ render_esi(controller('AppBundle:Topselect:toptopics')) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    <!--  Scripts-->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/materialize.min.js"></script>
    <script src="/js/init.js"></script>
{% endblock %}