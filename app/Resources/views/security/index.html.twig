{% extends 'base.html.twig' %}

{% block title%}Quote of the Day - BrainyQuote{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="/css/font-awesome.min.css" rel="stylesheet">
    <link href="/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
    <link href="/css/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="row">
                    <h5 class="center-align">Get a free BrainyQuote account to create</h5>
                    <h5 class="center-align">amazing collections and save your favorite quotes</h5>
                </div>
            </div>

            <div class="col s12 m6 l6">
                <div class="row" style="margin-right: 0px;">

                    <div class="card-panel hoverable">
                        <h5 class="center-align">Sign Up</h5>


                        {{ form_start(form) }}
                        {{ form_errors(form) }}

                        <div class="input-field">
                            {{ form_widget(form.username, {'attr': {'class': 'validate'}}) }}
                            {{ form_label(form.username) }}
                            {{ form_errors(form.username) }}
                        </div>

                        <div class="input-field">
                            {{ form_widget(form.email, {'attr': {'class': 'validate'}}) }}
                            {{ form_label(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="input-field">
                            {{ form_widget(form.password, {'attr': {'class': 'validate'}}) }}
                            {{ form_label(form.password) }}
                            {{ form_errors(form.password) }}
                        </div>

                        <div class="input-field">
                            {{ form_widget(form.save, {'attr':{'class':'btn'}}) }}
                        </div>

                        {{ form_end(form) }}

                        <div class="card-action">
                            <a href="#">This is a link</a>
                            <a href="#">This is a link</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col s12 m6 l6">
                <div class="row">
                    <h5>Create your personal quote collections</h5>

                    <ul>
                        <li>Easily favorite quotes on our site</li>
                        <li>Organize multiple quote collections</li>
                        <li>Access collections on all of your devices</li>
                        <li>Link 4</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    <!--  Scripts-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="/js/materialize.js"></script>
    <script src="/js/init.js"></script>
{% endblock %}